<UserControl x:Class="PXLed.Effects.Default.RainbowEffect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PXLed.Effects.Default"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label FontSize="15" Grid.Row="1" Grid.Column="0">Speed</Label>
        <Slider x:Name="speedSlider" Minimum="0.1" Maximum="500" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"/>

        <Label FontSize="15" Grid.Row="2" Grid.Column="0">Zoom</Label>
        <Slider x:Name="zoomSlider" Minimum="0.1" Maximum="10" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</UserControl>
